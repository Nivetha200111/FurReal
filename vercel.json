{
	"version": 2,
	"builds": [
		{ "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "client/dist" } },
		{ "src": "client/api/**/*.ts", "use": "@vercel/node" }
	],
	"routes": [
		{ "src": "/api/(.*)", "dest": "/client/api/$1" },
		{ "src": "/(.*)", "dest": "/client/dist/$1" }
	]
}
